    "version": "0.2.0",
    "configurations": [
        {
            "name": "normal debug",
            "type": "debugpy",
            "request": "launch",
            "program": "TameTheTime.py",
            "console": "integratedTerminal"
        },
        {
            "name": "TTT no notifications",
            "type": "debugpy",
            "request": "launch",
            "program": "TameTheTime.py",
            "console": "integratedTerminal",
            "args": "--no-notification --log-level debug"
        },
        {
            "name": "TTT at 16:55",
            "type": "debugpy",
            "request": "launch",
            "program": "TameTheTime.py",
            "console": "integratedTerminal",
            "args": "--time \"2025-08-21T16:55:00\" --no-notification"
        },
        {
            "name": "private config",
            "type": "debugpy",
            "request": "launch",
            "program": "TameTheTime.py",
            "console": "integratedTerminal",
            "args": "--config settings_private.yaml"
        },
        {
            "name": "test config",
            "type": "debugpy",
            "request": "launch",
            "program": "TameTheTime.py",
            "console": "integratedTerminal",
            "args": "--config settings_test.yaml --db test.db"
        },
        {
            "name": "Tuesday_settings_251007 config",
            "type": "debugpy",
            "request": "launch",
            "program": "TameTheTime.py",
            "console": "integratedTerminal",
            "args": "--config Tuesday_settings_251007.yaml"
